<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:id="@+id/iType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_car" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="@dimen/spacing"
                android:textColor="@color/black_three_87"
                android:textSize="@dimen/textSize"
                android:textStyle="normal"
                tools:text="ОСАГО EEE0858555888
Nissan Qashqai
c 02.01.2016 по 01.01.2017" />

            <ImageView
                android:id="@+id/ibtnShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_copy_8" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_two">
            
            <ProgressBar
                android:id="@+id/seek"
                android:layout_width="216dp"
                android:layout_height="8dp"
                android:layout_marginLeft="@dimen/bottomMarginLeft"
                android:layout_marginTop="@dimen/buyTop"
                android:background="@color/white_three"/>

            <TextView
                android:id="@+id/rest"
                android:layout_marginLeft="@dimen/bottomMarginLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/buyTop"
                android:layout_marginBottom="@dimen/buyTop"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/warm_grey"
                android:lineSpacingExtra="4sp"
                tools:text="Осталось 5 дней (до 01.05.2017)"
                android:layout_below="@+id/seek"
                 />

            <ImageView
                android:id="@+id/ibtnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/buyTop"
                android:layout_marginBottom="@dimen/buyTop"
                android:layout_marginRight="16dp"
                android:src="@drawable/time"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>